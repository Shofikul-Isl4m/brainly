{
  "version": 2,
  "rewrites": [
    {
      "source": "/user(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/share(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
}
